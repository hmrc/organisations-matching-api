{
  "type": "object",
  "description": "Organisation's CRN and postcode",
  "required": [
    "crn",
    "postcode"
  ],
  "properties": {
    "crn": {
      "type": "string",
      "description": "Company Registration Number",
      "pattern": "^([A-Za-z0-9]{0,2})?([0-9]{1,6})$"
    },
    "postcode": {
      "type": "string",
      "description": "Company's postcode"
    }
  }
}
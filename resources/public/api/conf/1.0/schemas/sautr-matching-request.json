{
  "type": "object",
  "required": [
    "organisationType",
    "utr",
    "name",
    "address",
    "postcode"
  ],
  "properties": {
    "organisationType": {
      "type": "string",
      "description": "S = Sole Trader, P = Partnership",
      "enum": [
        "S",
        "P"
      ]
    },
    "utr": {
      "type": "string",
      "pattern": "^[0-9]{10}$"
    },
    "name": {
      "type": "string",
    },
    "address": {
      "type": "object",
      "required": [
        "addressLine1"
      ],
      "properties": {
        "addressLine1": {
          "type": "string"
        },
        "addressLine2": {
          "type": "string"
        },
        "addressLine3": {
          "type": "string"
        },
        "addressLine4": {
          "type": "string"
        }
      }
    },
    "postcode": {
      "type": "string",
    }
  }
}
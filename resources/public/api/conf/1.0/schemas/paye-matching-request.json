{
  "type": "object",
  "description": "Company's CRN and known facts",
  "required": [
    "companyRegistrationNumber",
    "employerName",
    "address"
  ],
  "properties": {
    "companyRegistrationNumber": {
      "type": "string",
      "description": "Company Registration Number",
      "pattern": "^[A-Z0-9]{1,10}$"
    },
    "employerName": {
      "type": "string",
      "description": "Employer name"
    },
    "address": {
      "type": "object",
      "description": "Address",
      "required": [
        "addressLine1",
        "addressLine2",
        "postcode"
      ],
      "properties": {
        "addressLine1": {
          "type": "string",
          "description": "Address line 1.",
          "example": "123 Long Road"
        },
        "addressLine2": {
          "type": "string",
          "description": "Address line 2.",
          "example": "Some City"
        },
        "addressLine3": {
          "type": "string",
          "description": "Address line 3.",
          "example": "Some County"
        },
        "addressLine4": {
          "type": "string",
          "description": "Address line 4."
        },
        "postcode": {
          "type": "string",
          "description": "The postcode for the address.",
          "example": "AB12 3CD"
        }
      }
    }
  }
}